<style>
  :root {
    --whatsapp-bg-color: {{ settings.whatsapp_background_color | default: '#25D366' }};
    --whatsapp-bottom-desktop: {{ settings.whatsapp_bottom_position | default: 90 }}px;
    --whatsapp-bottom-mobile: {{ settings.whatsapp_bottom_position_mobile | default: 80 }}px;
    --whatsapp-side-position: {{ settings.whatsapp_side_position | default: 25 }}px;
  }

  .whatsapp-float {
    position: fixed;
    right: var(--whatsapp-side-position);
    bottom: var(--whatsapp-bottom-desktop);
    display: flex;
    align-items: center;
    background-color: var(--whatsapp-bg-color);
    color: white;
    border-radius: 50px;
    box-shadow: 0 5px 15px rgba(37, 211, 102, 0.4);
    z-index: 1001;
    transition: all 0.3s ease;
    text-decoration: none;
    overflow: hidden;
    max-width: 50px;
    max-height: 50px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
  }
  
  .whatsapp-float.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .whatsapp-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: var(--whatsapp-bg-color);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
  }
  
  .whatsapp-icon svg {
    width: 28px;
    height: 28px;
  }
  
  .whatsapp-text {
    padding: 0 20px 0 5px;
    font-size: 14px;
    font-weight: 600;
    color: white;
    white-space: nowrap;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .whatsapp-float:hover {
    max-width: 200px;
    box-shadow: 0 8px 25px rgba(37, 211, 102, 0.6);
    transform: translateY(-5px);
  }
  
  .whatsapp-float:hover .whatsapp-text {
    opacity: 1;
  }
  
  /* כשיש את ה-sticky-atc, נזיז את כפתור הווטסאפ גבוה יותר */
  .sticky-atc-container.show ~ .whatsapp-float.show,
  body:has(.sticky-atc-container.show) .whatsapp-float.show {
    bottom: calc(var(--whatsapp-bottom-desktop) + 90px);
  }
  
  @media (max-width: 767px) {
    .whatsapp-float {
      right: 15px;
      bottom: var(--whatsapp-bottom-mobile);
    }
    
    .sticky-atc-container.show ~ .whatsapp-float.show,
    body:has(.sticky-atc-container.show) .whatsapp-float.show {
      bottom: calc(var(--whatsapp-bottom-mobile) + 90px);
    }
  }
  
  /* מצב RTL (עברית) */
  html[dir="rtl"] .whatsapp-float {
    right: auto;
    left: var(--whatsapp-side-position);
  }
  
  html[dir="rtl"] .whatsapp-text {
    padding: 0 5px 0 20px;
  }
  
  @media (max-width: 767px) {
    html[dir="rtl"] .whatsapp-float {
      right: auto;
      left: 15px;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const whatsappButton = document.querySelector('.whatsapp-float');
  if (!whatsappButton) return; // אם הכפתור לא מופעל, צא מהפונקציה
  
  const compatibilitySection = document.querySelector('.quick-compatibility-section');
  
  // הצג את כפתור הווטסאפ רק החל מהגלילה לסקשן quick-compatibility-section
  function toggleWhatsAppButton() {
    if (!compatibilitySection) {
      whatsappButton.classList.remove('show');
      return;
    }
    
    const sectionPosition = compatibilitySection.getBoundingClientRect();
    const windowHeight = window.innerHeight;
    
    // מציג את הכפתור כאשר המשתמש הגיע לסקשן (הראש של הסקשן נמצא בתצוגה או עבר)
    if (sectionPosition.top <= windowHeight) {
      whatsappButton.classList.add('show');
    } else {
      whatsappButton.classList.remove('show');
    }
  }
  
  // הפעל את הלוגיקה של הגלילה
  window.addEventListener('scroll', toggleWhatsAppButton);
  // בדיקה ראשונית
  toggleWhatsAppButton();
});
</script>
{% endif %} 