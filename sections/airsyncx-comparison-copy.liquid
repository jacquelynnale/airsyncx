  }
  
  .highlight::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #38d2d2, #2dd4bf);
    transform-origin: right;
    transform: scaleX(0);
    transition: transform 0.8s ease;
