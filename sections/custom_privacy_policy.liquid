    animation: line-animation 15s infinite linear;
    opacity: 0.3;
  }
  
  .line-1 {
    top: 10%;
    width: 80%;
    right: 5%;
    animation-delay: 0s;
  }
  
  .line-2 {
    top: 30%;
    width: 60%;
    left: 10%;
    animation-delay: 3s;
  }
  
  .line-3 {
    bottom: 40%;
    width: 70%;
    right: 15%;
    animation-delay: 6s;
  }
  
  .line-4 {
    bottom: 15%;
    width: 55%;
    left: 20%;
    animation-delay: 9s;
  }
  
  .bg-circle {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(56, 210, 210, 0.2);
    animation: pulse 10s infinite;
  }
  
  .circle-1 {
    top: -150px;
    right: -150px;
    width: 300px;
    height: 300px;
    animation-delay: 0s;
  }
  
  .circle-2 {
    bottom: 20%;
    left: -100px;
    width: 200px;
    height: 200px;
    animation-delay: 3s;
  }
  
  .circle-3 {
    top: 40%;
    right: 30%;
    width: 150px;
    height: 150px;
    animation-delay: 6s;
  }
  
