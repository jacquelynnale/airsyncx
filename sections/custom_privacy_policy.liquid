    .policy-sections-container {
      flex-direction: column;
    }
    
    .policy-navigation {
      flex: auto;
      margin-bottom: 2rem;
    }
    
    .sticky-nav {
      position: relative;
      top: 0;
    }
  }
  
  @media (max-width: 768px) {
    .privacy-policy-title {
      font-size: 2.5rem;
    }
    
    .section-title {
      font-size: 1.5rem;
    }
    
    .contact-title {
      font-size: 1.8rem;
    }
  }
  
  @media (max-width: 480px) {
    .privacy-policy-title {
      font-size: 2rem;
    }
    
    .privacy-policy-subtitle {
      font-size: 1rem;
    }
    
    .section-title {
      font-size: 1.3rem;
    }
  }
</style>

