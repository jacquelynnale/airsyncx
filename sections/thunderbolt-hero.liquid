    z-index: 1;
  }
  
  .hero-btn.primary {
    background: linear-gradient(135deg, #38d2d2 0%, #2dd4bf 100%);
    color: #000000;
    box-shadow: 0 15px 35px rgba(56, 210, 210, 0.4);
  }

  .hero-btn.primary:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 50px rgba(56, 210, 210, 0.6);
  }

  .hero-btn.secondary {
    background: transparent;
    color: #38d2d2;
    border: 2px solid #38d2d2;
  }

  .hero-btn.secondary:hover {
    background: #38d2d2;
    color: #000000;
    transform: translateY(-5px);
  }

  .btn-background {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
    z-index: -1;
  }
  
  .hero-btn:hover .btn-background {
    left: 100%;
  }
  
  .btn-content {
    display: flex;
    align-items: center;
    gap: 12px;
    position: relative;
    z-index: 2;
  }
  
  .btn-icon {
    width: 20px;
    height: 20px;
  }

  .trust-indicators {
    display: flex;
    align-items: center;
    gap: 25px;
