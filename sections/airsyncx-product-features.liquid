{{ 'section-airsyncx-product-features.css' | asset_url | stylesheet_tag }}

<div class="airsyncx-product-features page-width section-{{ section.id }}-padding">
  <div class="product-features__container">
    <h2 class="product-features__heading">{{ section.settings.heading }}</h2>
    
    {% if section.settings.subheading != blank %}
      <p class="product-features__subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    
    <div class="product-features__grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature_item' %}
          <div class="product-features__item" {{ block.shopify_attributes }}>
            <div class="product-features__icon-wrapper">
              {% if block.settings.icon_image != blank %}
                <img 
                  src="{{ block.settings.icon_image | img_url: '100x' }}"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  class="product-features__icon-image"
                  width="{{ block.settings.icon_image.width }}"
                  height="{{ block.settings.icon_image.height }}"
                >
              {% else %}
                <div class="product-features__icon-placeholder">
                  <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 16V16.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M12 13C12 11 13 10 14 9.5C15 9 16 8.5 16 7C16 5.34315 14.2091 4 12 4C9.79086 4 8 5.5 8 7.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </div>
              {% endif %}
            </div>
            
            <div class="product-features__content">
              {% if block.settings.title != blank %}
                <h3 class="product-features__item-title">{{ block.settings.title }}</h3>
              {% endif %}
              
              {% if block.settings.description != blank %}
                <p class="product-features__item-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <div class="product-features__button-container">
        <a href="{{ section.settings.button_link }}" class="product-features__button button button--primary">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "What you can expect",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Key features and benefits of our product",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "columns",
      "options": [
        {
          "value": "2",
          "label": "2 columns"
        },
        {
          "value": "3",
          "label": "3 columns"
        }
      ],
      "default": "3",
      "label": "Columns"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Learn More",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_icons",
      "default": true,
      "label": "Show Icons"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Feature Title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "default": "Describe this feature and how it benefits the customer.",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Features",
      "blocks": [
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        },
        {
          "type": "feature_item"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.airsyncx-product-features {
  margin: 60px 0;
  background-color: #f9f9f9;
  padding: 60px 0;
}

.product-features__container {
  max-width: 1200px;
  margin: 0 auto;
}

.product-features__heading {
  text-align: center;
  font-size: 2.2rem;
  font-weight: 600;
  margin-bottom: 1rem;
}

.product-features__subheading {
  text-align: center;
  font-size: 1.1rem;
  color: #666;
  margin-bottom: 3rem;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.product-features__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.product-features__item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  padding: 1.5rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-features__item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
}

.product-features__icon-wrapper {
  flex-shrink: 0;
  width: 60px;
  height: 60px;
  margin-right: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-features__icon-image {
  max-width: 100%;
  max-height: 100%;
}

.product-features__icon-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.product-features__content {
  flex-grow: 1;
}

.product-features__item-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.product-features__item-description {
  font-size: 0.95rem;
  color: #666;
  line-height: 1.5;
}

.product-features__button-container {
  text-align: center;
  margin-top: 2rem;
}

.product-features__button {
  display: inline-block;
  padding: 12px 30px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.product-features__button:hover {
  transform: translateY(-3px);
}

@media screen and (max-width: 749px) {
  .product-features__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .product-features__heading {
    font-size: 1.8rem;
  }
  
  .product-features__subheading {
    font-size: 1rem;
  }
  
  .product-features__item {
    padding: 1.2rem;
  }
}
{% endstylesheet %}
