<script>
  // Logo flicker prevention code on page load
  (function() {
    // Immediately on load - ensure header is always displayed
    document.querySelector('.airsyncx-header').style.display = 'block';
    document.querySelector('.airsyncx-header').style.opacity = '1';
    document.querySelector('.airsyncx-header').style.visibility = 'visible';
  })();
  
  // Simple and clean - mobile menu code
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize AOS
    AOS.init({
      once: true,
      disable: 'phone',
      duration: 800
    });
    
    // Header scroll effect
    const header = document.querySelector('.airsyncx-header');
    
    window.addEventListener('scroll', function() {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
    
    // Mobile menu - simple version
    const mobileMenu = document.getElementById('mobileMenu');
    const toggleButton = document.querySelector('.js-toggle-mobile-menu');
    const closeButton = document.querySelector('.js-close-mobile-menu');
    const stickyAtcContainer = document.querySelector('.sticky-atc-container');
    
    console.log('Menu elements:', { 
      menu: mobileMenu, 
      toggleBtn: toggleButton, 
      closeBtn: closeButton 
    });
    
    // Function to hide sticky-atc-container
    function hideStickyAtc() {
      if (stickyAtcContainer) {
        stickyAtcContainer.classList.remove('show');
        stickyAtcContainer.style.display = 'none';
      }
    }
    
    // Function to show sticky-atc-container when needed
    function showStickyAtc() {
      if (stickyAtcContainer) {
        stickyAtcContainer.style.display = '';
        // Let its own logic control the 'show' class based on page scroll
      }
    }
    
    if (toggleButton && mobileMenu) {
      // Open menu
      toggleButton.addEventListener('click', function(e) {
        e.preventDefault();
        console.log('Toggle button clicked');
        mobileMenu.classList.add('open');
        document.body.style.overflow = 'hidden';
        hideStickyAtc(); // Hide sticky-atc-container when opening menu
      });
      
      // Open menu - touch event for mobile
      toggleButton.addEventListener('touchstart', function(e) {
        e.preventDefault();
        console.log('Toggle button touched');
        mobileMenu.classList.add('open');
        document.body.style.overflow = 'hidden';
        hideStickyAtc(); // Hide sticky-atc-container when opening menu
      }, { passive: false });
    }
    
    if (closeButton && mobileMenu) {
      // Close menu
      closeButton.addEventListener('click', function(e) {
        e.preventDefault();
        console.log('Close button clicked');
        mobileMenu.classList.remove('open');
        document.body.style.overflow = '';
        showStickyAtc(); // Show sticky-atc-container when closing menu
      });
      
      // Close menu - touch event for mobile
      closeButton.addEventListener('touchstart', function(e) {
        e.preventDefault();
        console.log('Close button touched');
        mobileMenu.classList.remove('open');
        document.body.style.overflow = '';
        showStickyAtc(); // Show sticky-atc-container when closing menu
      }, { passive: false });
    }
    
    // Default - ensure menu is closed
    if (mobileMenu) {
      mobileMenu.classList.remove('open');
    }
    
    // Global - added as backup in case the listeners above don't work
    document.addEventListener('click', function(event) {
      // Check if click was on main button or one of its elements
      if (event.target.closest('.js-toggle-mobile-menu') || 
          event.target.closest('.airsyncx-mobile-toggle')) {
        event.preventDefault();
        console.log('Global toggle click handler activated');
        if (mobileMenu) {
          mobileMenu.classList.add('open');
          document.body.style.overflow = 'hidden';
          hideStickyAtc(); // Hide sticky-atc-container when opening menu
        }
      }
      
      // Check if click was on close button
      if (event.target.closest('.js-close-mobile-menu')) {
        event.preventDefault();
        console.log('Global close click handler activated');
        if (mobileMenu) {
          mobileMenu.classList.remove('open');
          document.body.style.overflow = '';
          showStickyAtc(); // Show sticky-atc-container when closing menu
        }
      }
    });
  });
</script>

