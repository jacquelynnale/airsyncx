<style>
  .thunderbolt-benefits-strip * {
    font-family: 'Assistant', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  .thunderbolt-benefits-strip {
    background-color: #000000;
    color: #ffffff;
    padding: 120px 0;
    direction: {% if request.locale.iso_code == 'he' %}rtl{% else %}ltr{% endif %};
    position: relative;
    overflow: hidden;
  }
  
  .background-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
  }
  
  .bg-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(56, 210, 210, 0.05) 0%, rgba(56, 210, 210, 0) 70%);
  }
  
  .bg-circle-1 {
    width: 600px;
    height: 600px;
    top: -300px;
    left: -200px;
    opacity: 0.4;
  }
  
  .bg-circle-2 {
    width: 500px;
    height: 500px;
    bottom: -250px;
    right: -150px;
    opacity: 0.3;
  }
  
  .bg-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to right, rgba(56, 210, 210, 0.05) 1px, transparent 1px),
                      linear-gradient(to bottom, rgba(56, 210, 210, 0.05) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.2;
  }
  
  .benefits-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }
  
  .benefits-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .section-eyebrow {
    font-size: 2.2rem;
    font-weight: 600;
    color: #38d2d2;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px;
  }
  
  .benefits-title {
    font-size: 6rem;
    font-weight: 800;
    margin-bottom: 30px;
    color: #ffffff;
    position: relative;
    display: inline-block;
    letter-spacing: -0.5px;
  }
  
  .benefits-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 0;
    width: 100%;
    height: 3px;
    background-color: #38d2d2;
    transform-origin: right;
    transform: scaleX(0);
    transition: transform 0.5s ease;
  }
  
  .benefits-header:hover .benefits-title::after {
    transform-origin: left;
    transform: scaleX(1);
  }
  
  .section-description {
    font-size: 2.4rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }
  
  .benefit-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 40px 25px;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    background: linear-gradient(145deg, rgba(25, 25, 25, 0.1), rgba(0, 0, 0, 0.5));
    border: 1px solid rgba(56, 210, 210, 0.1);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    overflow: hidden;
    position: relative;
  }
  
  .benefit-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent, rgba(56, 210, 210, 0.03), transparent);
    z-index: -1;
    transition: all 0.5s ease;
  }
  
  .benefit-item:hover {
    transform: translateY(-15px);
    box-shadow: 0 15px 35px rgba(56, 210, 210, 0.2);
    border-color: rgba(56, 210, 210, 0.3);
  }
  
  .benefit-item:hover::before {
    transform: translateX(100%);
  }
  
  .benefit-icon-wrapper {
    position: relative;
    margin-bottom: 30px;
  }
  
  .benefit-icon {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    transition: all 0.3s ease;
    background: transparent;
  }
  
  .benefit-icon.hover {
    background-color: #38d2d2;
    transform: scale(1.1) rotate(5deg);
  }
  
  .benefit-icon.hover svg path[stroke="#38d2d2"],
  .benefit-icon.hover svg circle[stroke="#38d2d2"],
  .benefit-icon.hover svg rect[stroke="#38d2d2"] {
    stroke: #ffffff;
  }
  
  .benefit-icon.hover svg path[fill="#38d2d2"],
  .benefit-icon.hover svg circle[fill="#38d2d2"],
  .benefit-icon.hover svg rect[fill="#38d2d2"] {
    fill: #ffffff;
  }
  
  .icon-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    border-radius: 50%;
    opacity: 0.4;
    z-index: 1;
    transition: all 0.5s ease;
  }
  
  .speed-glow {
    background: radial-gradient(circle at center, rgba(56, 210, 210, 0.6) 0%, rgba(56, 210, 210, 0) 70%);
  }
  
  .charging-glow {
    background: radial-gradient(circle at center, rgba(56, 210, 210, 0.3) 0%, rgba(56, 210, 210, 0) 70%);
  }
  
  .compatibility-glow {
    background: radial-gradient(circle at center, rgba(56, 210, 210, 0.4) 0%, rgba(56, 210, 210, 0) 70%);
  }
  
  .armor-glow {
    background: radial-gradient(ellipse at center, rgba(56, 210, 210, 0.5) 0%, rgba(56, 210, 210, 0) 70%);
  }
  
  /* Icon Animations */
  .speed-line1, .speed-line2, .speed-line3, 
  .charging-bolt, 
  .sync-arrow1, .sync-arrow2,
  .shield-pattern1, .shield-pattern2, .shield-pattern3, .shield-pattern4, .shield-pattern5 {
    transition: all 0.8s ease;
  }
  
  .benefit-title {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 15px;
    color: #ffffff;
    transition: all 0.3s ease;
  }
  
  .benefit-item:hover .benefit-title {
    color: #38d2d2;
  }
  
  .benefit-description {
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.5;
    transition: all 0.3s ease;
  }
  
  .benefit-item:hover .benefit-description {
    color: rgba(255, 255, 255, 1);
  }
  
  @media (max-width: 1200px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
    
    .benefits-title {
      font-size: 5.2rem;
    }
    
    .section-description {
      font-size: 2.2rem;
    }
  }
  
  @media (max-width: 768px) {
    .thunderbolt-benefits-strip {
      padding: 100px 0;
    }
    
    .benefits-header {
      margin-bottom: 60px;
    }
    
    .benefits-title {
      font-size: 4.8rem;
    }
    
    .section-eyebrow {
      font-size: 2rem;
    }
    
    .benefit-title {
      font-size: 2.6rem;
    }
    
    .benefit-description {
      font-size: 1.9rem;
    }
    
    .benefit-icon {
      width: 110px;
      height: 110px;
    }
    
    .icon-glow {
      width: 110px;
      height: 110px;
    }
  }
  
  @media (max-width: 576px) {
    .benefits-grid {
      grid-template-columns: 1fr;
    }
    
    .benefits-title {
      font-size: 4.2rem;
    }
    
    .section-description {
      font-size: 2rem;
    }
    
    .benefit-item {
      padding: 30px 20px;
    }
    
    .benefit-title {
      font-size: 2.4rem;
    }
    
    .benefit-description {
      font-size: 1.8rem;
    }
    
    .benefit-icon {
      width: 100px;
      height: 100px;
    }
    
    .icon-glow {
      width: 100px;
      height: 100px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize AOS animations
    AOS.init({
      once: true,
      disable: 'phone'
    });
    
    // Speed icon animation
    const speedIcon = document.querySelector('.speed-icon');
    if (speedIcon) {
      const speedLines = speedIcon.querySelectorAll('.speed-line1, .speed-line2, .speed-line3');
      let currentSpeedLine = 0;
      
      setInterval(() => {
        speedLines.forEach(line => line.style.opacity = '0.3');
        speedLines[currentSpeedLine].style.opacity = '1';
        currentSpeedLine = (currentSpeedLine + 1) % speedLines.length;
      }, 600);
    }
    
    // Charging icon animation
    const chargingIcon = document.querySelector('.charging-icon');
    if (chargingIcon) {
      const chargingBolt = chargingIcon.querySelector('.charging-bolt');
      
      setInterval(() => {
        chargingBolt.style.opacity = '1';
        chargingBolt.style.transform = 'scale(1.1)';
        setTimeout(() => {
          chargingBolt.style.opacity = '0.8';
          chargingBolt.style.transform = 'scale(1)';
        }, 800);
      }, 2000);
    }
    
    // Compatibility icon animation
    const compatibilityIcon = document.querySelector('.compatibility-icon');
    if (compatibilityIcon) {
      const arrows = compatibilityIcon.querySelectorAll('.sync-arrow1, .sync-arrow2');
      
      setInterval(() => {
        arrows.forEach(arrow => {
          arrow.style.opacity = '0';
          setTimeout(() => {
            arrow.style.opacity = '1';
          }, 500);
        });
      }, 3000);
    }
    
    // Armor icon animation
    const armorIcon = document.querySelector('.armor-icon');
    if (armorIcon) {
      const patterns = armorIcon.querySelectorAll('.shield-pattern1, .shield-pattern2, .shield-pattern3, .shield-pattern4, .shield-pattern5');
      let currentPattern = 0;
      
      setInterval(() => {
        patterns.forEach(pattern => pattern.style.opacity = '0.3');
        patterns[currentPattern].style.opacity = '1';
        currentPattern = (currentPattern + 1) % patterns.length;
      }, 400);
    }
    
    // Card hover effects
    const benefitItems = document.querySelectorAll('.benefit-item');
    
    benefitItems.forEach(card => {
      card.addEventListener('mouseenter', function() {
        const iconGlow = this.querySelector('.icon-glow');
        if (iconGlow) {
          iconGlow.style.opacity = '1';
          iconGlow.style.transform = 'translate(-50%, -50%) scale(1.2)';
        }
        
        const benefitIcon = this.querySelector('.benefit-icon');
        if (benefitIcon) {
          benefitIcon.classList.add('hover');
        }
      });
      
      card.addEventListener('mouseleave', function() {
        const iconGlow = this.querySelector('.icon-glow');
        if (iconGlow) {
          iconGlow.style.opacity = '0.4';
          iconGlow.style.transform = 'translate(-50%, -50%) scale(1)';
        }
        
        const benefitIcon = this.querySelector('.benefit-icon');
        if (benefitIcon) {
          benefitIcon.classList.remove('hover');
        }
      });
    });
    
    // Parallax background effect
    const bgCircles = document.querySelectorAll('.bg-circle');
    
    window.addEventListener('mousemove', function(e) {
      let x = e.clientX / window.innerWidth;
      let y = e.clientY / window.innerHeight;
      
      bgCircles.forEach((circle, index) => {
        const factor = index + 1;
        circle.style.transform = `translate(${x * 25 * factor}px, ${y * 25 * factor}px)`;
      });
    });
  });
</script>

