      const dots = document.querySelectorAll('.pagination-dot');
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentIndex);
      });
      
      // Move slider
      const translateX = currentIndex * cardWidth;
      track.style.transform = `translateX(${translateX}px)`;
      
      // Update button states
      prevBtn.disabled = currentIndex === totalSlides - 1;
      nextBtn.disabled = currentIndex === 0;
      
      // Add active class to current cards
      cards.forEach((card, i) => {
        const isVisible = i >= (cards.length - currentIndex - visibleCards) && i < (cards.length - currentIndex);
        card.classList.toggle('active-card', isVisible);
      });
    }
    
