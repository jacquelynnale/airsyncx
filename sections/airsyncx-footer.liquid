            <li class="payment-icon">{{ 'bitcoin' | payment_type_svg_tag }}</li>
            <li class="payment-icon">{{ 'unionpay' | payment_type_svg_tag }}</li>
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</footer>

