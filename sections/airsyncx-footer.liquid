<!-- AirSyncX Footer Section -->
<!-- Google Fonts - Assistant -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

<footer id="footer" class="airsyncx-footer">
  <div class="background-elements">
    <div class="bg-circle bg-circle-1"></div>
    <div class="bg-circle bg-circle-2"></div>
    <div class="bg-lines"></div>
    <div class="tech-particles">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>
  </div>
  
  <div class="footer-container">
    <div class="footer-top" data-aos="fade-up" data-aos-duration="800">
      <div class="footer-logo">
        {% if section.settings.footer_logo != blank %}
          <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="{{ shop.name }}" class="footer-logo-img">
        {% else %}
          <img src="https://cdn.shopify.com/s/files/1/0931/3724/0362/files/ChatGPT_Image_Apr_28_2025_08_28_33_PM_624c66dc-3a38-434d-97a3-656295f52514.png?v=1745861554" alt="{{ shop.name }}" class="footer-logo-img">
        {% endif %}
        
        <p class="footer-tagline">{{ section.settings.tagline }}</p>
      </div>
      
      <div class="footer-newsletter">
        <h3 class="newsletter-title">{{ section.settings.newsletter_title }}</h3>
        <p class="newsletter-text">{{ section.settings.newsletter_text }}</p>
        
        {% form 'customer', id: 'ContactFooter', class: 'footer-newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="ContactFooter-error"
                {% elsif form.posted_successfully? %}
                  aria-describedby="ContactFooter-success"
                {% endif %}
                placeholder="{{ section.settings.newsletter_placeholder }}"
                required
              >
              <button
                type="submit"
                class="newsletter-button"
                name="commit"
                aria-label="הירשם לניוזלטר"
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            </div>
            
            {%- if form.errors -%}
              <div class="newsletter-form-message form-error" id="ContactFooter-error">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="8" cy="8" r="7.5" stroke="currentColor"/>
                  <path d="M8 4V9" stroke="currentColor" stroke-linecap="round"/>
                  <path d="M8 11.5V12" stroke="currentColor" stroke-linecap="round"/>
                </svg>
                <span>{{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}</span>
              </div>
            {%- endif -%}
            
            {%- if form.posted_successfully? -%}
              <div class="newsletter-form-message form-success" id="ContactFooter-success" tabindex="-1" autofocus>
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 8L6.5 11.5L13 5" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ section.settings.newsletter_success }}</span>
              </div>
            {%- endif -%}
          </div>
        {% endform %}
      </div>
    </div>
    
    <div class="footer-middle" data-aos="fade-up" data-aos-delay="100">
      <div class="footer-nav-columns">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link_list' %}
              <div class="footer-nav-column" {{ block.shopify_attributes }}>
                <h3 class="footer-nav-title">{{ block.settings.title }}</h3>
                {% if block.settings.menu != blank %}
                  <ul class="footer-nav-list">
                    {% for link in block.settings.menu.links %}
                      <li class="footer-nav-item">
                        <a href="{{ link.url }}" class="footer-nav-link">
                          {% assign link_key = '' %}
                          {% if link.title == 'Search' %}
                            {% assign link_key = 'footer.navigation.search' %}
                          {% elsif link.title == 'About Us' or link.title == 'About' %}
                            {% assign link_key = 'footer.navigation.about' %}
                          {% elsif link.title == 'Contact Us' or link.title == 'Contact' %}
                            {% assign link_key = 'footer.navigation.contact' %}
                          {% elsif link.title == 'FAQ' or link.title == 'FAQs' %}
                            {% assign link_key = 'footer.navigation.faq' %}
                          {% elsif link.title == 'Shipping & Returns' or link.title == 'Shipping' %}
                            {% assign link_key = 'footer.navigation.shipping' %}
                          {% elsif link.title == 'Terms of Service' or link.title == 'Terms' %}
                            {% assign link_key = 'footer.navigation.terms' %}
                          {% elsif link.title == 'Privacy Policy' or link.title == 'Privacy' %}
                            {% assign link_key = 'footer.navigation.privacy' %}
                          {% elsif link.title == 'Refund Policy' or link.title == 'Refunds' or link.url contains '/refund-return-policy' %}
                            {% assign link_key = 'footer.navigation.refund' %}
                          {% elsif link.title == 'Blog' %}
                            {% assign link_key = 'footer.navigation.blog' %}
                          {% elsif link.title == 'Compatibility' %}
                            {% assign link_key = 'footer.navigation.compatibility' %}
                          {% elsif link.title == 'Instructions' or link.title == 'Guide' %}
                            {% assign link_key = 'footer.navigation.instructions' %}
                          {% elsif link.title == 'Support' %}
                            {% assign link_key = 'footer.navigation.support' %}
                          {% endif %}
                          
                          {% if link_key != '' %}
                            {{ link_key | t }}
                          {% else %}
                            {{ link.title }}
                          {% endif %}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% when 'text' %}
              <div class="footer-nav-column" {{ block.shopify_attributes }}>
                <h3 class="footer-nav-title">{{ block.settings.title }}</h3>
                <div class="footer-text-content">
                  {{ block.settings.text }}
                </div>
              </div>
            {% when 'contact' %}
              <div class="footer-nav-column" {{ block.shopify_attributes }}>
                <h3 class="footer-nav-title">{{ block.settings.title }}</h3>
                <ul class="footer-contact-list">
                  {% if block.settings.phone != blank %}
                    <li class="footer-contact-item">
                      <div class="contact-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                        </svg>
                      </div>
                      <a href="tel:{{ block.settings.phone }}" class="contact-text">{{ block.settings.phone }}</a>
                    </li>
                  {% endif %}
                  
                  {% if block.settings.email != blank %}
                    <li class="footer-contact-item">
                      <div class="contact-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                          <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                      </div>
                      <a href="mailto:{{ block.settings.email }}" class="contact-text">{{ block.settings.email }}</a>
                    </li>
                  {% endif %}
                  
                  {% if block.settings.address != blank %}
                    <li class="footer-contact-item">
                      <div class="contact-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                          <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                      </div>
                      <span class="contact-text">{{ block.settings.address }}</span>
                    </li>
                  {% endif %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      
      {% if section.settings.show_social %}
        <div class="footer-social" data-aos="fade-up" data-aos-delay="200">
          <h3 class="social-title">{{ 'footer.social.follow_us' | t }}</h3>
          <ul class="social-links">
            {% if settings.social_facebook_link != blank %}
              <li class="social-item">
                <a href="{{ settings.social_facebook_link }}" target="_blank" class="social-link" aria-label="{{ 'footer.social.facebook' | t }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
              </li>
            {% else %}
              <li class="social-item">
                <a href="#" target="_blank" class="social-link" aria-label="{{ 'footer.social.facebook' | t }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
              </li>
            {% endif %}
            
            {% if settings.social_instagram_link != blank %}
              <li class="social-item">
                <a href="{{ settings.social_instagram_link }}" target="_blank" class="social-link" aria-label="{{ 'footer.social.instagram' | t }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
              </li>
            {% else %}
              <li class="social-item">
                <a href="#" target="_blank" class="social-link" aria-label="{{ 'footer.social.instagram' | t }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
              </li>
            {% endif %}
            
            {% if settings.social_tiktok_link != blank %}
              <li class="social-item">
                <a href="{{ settings.social_tiktok_link }}" target="_blank" class="social-link" aria-label="{{ 'footer.social.tiktok' | t }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19.321 5.562a5.123 5.123 0 0 1-.443-.258 6.228 6.228 0 0 1-1.137-.966c-.849-.849-1.286-1.709-1.358-2.681h.004C16.298 1.192 16.07.72 15.708.32a.813.813 0 0 0-.567-.243H12.14v14.09c0 .414-.123.82-.356 1.173-.232.352-.564.631-.954.804a2.52 2.52 0 0 1-1.092.243c-.706 0-1.383-.28-1.882-.78a2.668 2.668 0 0 1-.78-1.883c0-.706.28-1.383.78-1.882s1.176-.78 1.882-.78c.26 0 .517.05.758.147V8.28a5.492 5.492 0 0 0-.758-.052c-1.537 0-3.01.611-4.098 1.698C3.539 11.015 2.928 12.489 2.928 14.026s.61 3.01 1.698 4.097c1.088 1.088 2.562 1.698 4.098 1.698s3.01-.61 4.098-1.698c1.087-1.087 1.698-2.56 1.698-4.097V7.832a8.17 8.17 0 0 0 4.68 1.465v-2.91c-.896 0-1.745-.323-2.407-.915-.662-.592-1.077-1.405-1.177-2.303l.005-.607z"/>
                  </svg>
                </a>
              </li>
            {% else %}
              <li class="social-item">
                <a href="#" target="_blank" class="social-link" aria-label="{{ 'footer.social.tiktok' | t }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19.321 5.562a5.123 5.123 0 0 1-.443-.258 6.228 6.228 0 0 1-1.137-.966c-.849-.849-1.286-1.709-1.358-2.681h.004C16.298 1.192 16.07.72 15.708.32a.813.813 0 0 0-.567-.243H12.14v14.09c0 .414-.123.82-.356 1.173-.232.352-.564.631-.954.804a2.52 2.52 0 0 1-1.092.243c-.706 0-1.383-.28-1.882-.78a2.668 2.668 0 0 1-.78-1.883c0-.706.28-1.383.78-1.882s1.176-.78 1.882-.78c.26 0 .517.05.758.147V8.28a5.492 5.492 0 0 0-.758-.052c-1.537 0-3.01.611-4.098 1.698C3.539 11.015 2.928 12.489 2.928 14.026s.61 3.01 1.698 4.097c1.088 1.088 2.562 1.698 4.098 1.698s3.01-.61 4.098-1.698c1.087-1.087 1.698-2.56 1.698-4.097V7.832a8.17 8.17 0 0 0 4.68 1.465v-2.91c-.896 0-1.745-.323-2.407-.915-.662-.592-1.077-1.405-1.177-2.303l.005-.607z"/>
                  </svg>
                </a>
              </li>
            {% endif %}
          </ul>
        </div>
      {% endif %}
    </div>
    
    <div class="footer-bottom" data-aos="fade-up" data-aos-delay="300">
      <div class="footer-copyright">
        <p>{{ section.settings.copyright_text | replace: '[year]', 'now' | date: '%Y' }}</p>
      </div>
      
      {% if section.settings.show_payment_icons %}
        <div class="footer-payment">
          <ul class="payment-icons">
