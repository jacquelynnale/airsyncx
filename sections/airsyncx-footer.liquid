<style>
  .airsyncx-footer * {
    font-family: 'Assistant', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  .airsyncx-footer {
    padding: 100px 0 40px;
    background-color: #000000;
    color: #ffffff;
    position: relative;
    overflow: hidden;
    direction: rtl;
    border-top: 1px solid rgba(56, 210, 210, 0.3);
  }
  
  .background-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
  }
  
  .bg-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(56, 210, 210, 0.15) 0%, rgba(56, 210, 210, 0) 70%);
    animation: pulse-glow 8s infinite alternate ease-in-out;
  }
  
  @keyframes pulse-glow {
    0% {
      transform: scale(1);
      opacity: 0.3;
    }
    100% {
      transform: scale(1.1);
      opacity: 0.7;
    }
  }
  
  .bg-circle-1 {
    width: 800px;
    height: 800px;
    top: -300px;
    right: -200px;
    opacity: 0.4;
    animation-delay: 0s;
  }
  
  .bg-circle-2 {
    width: 600px;
    height: 600px;
    bottom: -250px;
    left: -150px;
    opacity: 0.3;
    animation-delay: 2s;
  }
  
  .bg-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(56, 210, 210, 0.07) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(56, 210, 210, 0.07) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
    animation: fade-lines 10s infinite alternate ease-in-out;
  }
  
  @keyframes fade-lines {
    0% {
      opacity: 0.2;
    }
    100% {
      opacity: 0.5;
    }
  }
  
  .tech-particles {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    top: 0;
    left: 0;
  }
  
  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background-color: rgba(56, 210, 210, 0.3);
    border-radius: 50%;
    animation: float-particle 20s infinite linear;
  }
  
  .particle:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-duration: 15s;
    animation-delay: 0s;
  }
  
  .particle:nth-child(2) {
    top: 70%;
    left: 20%;
    animation-duration: 25s;
    animation-delay: 2s;
  }
  
  .particle:nth-child(3) {
    top: 40%;
    right: 15%;
    animation-duration: 18s;
    animation-delay: 5s;
  }
  
  .particle:nth-child(4) {
    top: 65%;
    right: 25%;
    animation-duration: 22s;
    animation-delay: 7s;
  }
  
  .particle:nth-child(5) {
    top: 30%;
    right: 35%;
    animation-duration: 20s;
    animation-delay: 10s;
  }
  
  @keyframes float-particle {
    0% {
      transform: translateY(0) translateX(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100px) translateX(50px);
      opacity: 0;
    }
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
    position: relative;
    z-index: 1;
  }
  
  .footer-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 60px;
    flex-wrap: wrap;
    gap: 40px;
  }
  
  .footer-logo {
    flex: 1;
    min-width: 280px;
    padding: 25px;
    background: linear-gradient(to left, rgba(56, 210, 210, 0.05), rgba(0, 0, 0, 0));
    border-radius: 16px;
    border: 1px solid rgba(56, 210, 210, 0.15);
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .footer-logo:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(56, 210, 210, 0.15);
  }
  
  .footer-logo-img {
    max-width: 200px;
    height: auto;
    margin-bottom: 25px;
    transition: transform 0.4s ease, filter 0.4s ease;
    filter: drop-shadow(0 0 8px rgba(56, 210, 210, 0.3));
  }
  
  .footer-logo-img:hover {
    transform: scale(1.08);
    filter: drop-shadow(0 0 12px rgba(56, 210, 210, 0.5));
  }
  
  .footer-logo-text {
    font-size: 1.9rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: #38d2d2;
    position: relative;
    display: inline-block;
  }
  
  .footer-logo-text::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #38d2d2);
    transition: width 0.3s ease;
  }
  
  .footer-logo:hover .footer-logo-text::after {
    width: 100%;
  }
  
  .footer-tagline {
    font-size: 1.5rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .footer-newsletter {
    flex: 1;
    min-width: 280px;
    max-width: 450px;
    padding: 30px;
    background: linear-gradient(to left, rgba(56, 210, 210, 0.05), rgba(0, 0, 0, 0));
    border-radius: 16px;
    border: 1px solid rgba(56, 210, 210, 0.15);
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .footer-newsletter:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(56, 210, 210, 0.15);
  }
  
  .newsletter-title {
    font-size: 1.9rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: #38d2d2;
    position: relative;
    display: inline-block;
  }
  
  .newsletter-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 0;
