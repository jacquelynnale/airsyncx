<style>
  /* Base Styles */
  .airsyncx-installation {
    background-color: #000000;
    color: #ffffff;
    font-family: 'Assistant', sans-serif;
    padding-top: 80px;
    padding-bottom: 80px;
    position: relative;
    overflow: hidden;
  }
  
  .installation-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }
  
  /* Animated Background */
  .installation-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }
  
  .installation-bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 50% 50%, rgba(56, 210, 210, 0.1) 0%, rgba(0, 0, 0, 0) 70%);
    z-index: -1;
  }
  
  .circuit-line {
    position: absolute;
    height: 2px;
    background: linear-gradient(90deg, transparent, #38d2d2, transparent);
    animation: circuit-animation 15s infinite linear;
    opacity: 0.3;
  }
  
  .circuit-line:nth-child(1) {
    top: 15%;
    width: 80%;
    left: 10%;
    animation-delay: 0s;
  }
  
  .circuit-line:nth-child(2) {
    top: 35%;
    width: 60%;
    right: 5%;
    animation-delay: 2s;
  }
  
  .circuit-line:nth-child(3) {
    bottom: 45%;
    width: 75%;
    left: 5%;
    animation-delay: 1s;
  }
  
  .circuit-line:nth-child(4) {
    bottom: 25%;
    width: 85%;
    right: 10%;
    animation-delay: 3s;
  }
  
  .circuit-dot {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #38d2d2;
    animation: pulse 3s infinite;
  }
  
  .circuit-dot:nth-child(5) {
    top: 20%;
    left: 25%;
    animation-delay: 0.5s;
  }
  
  .circuit-dot:nth-child(6) {
    top: 40%;
    right: 20%;
    animation-delay: 1.5s;
  }
  
  .circuit-dot:nth-child(7) {
    bottom: 30%;
    left: 20%;
    animation-delay: 0.7s;
  }
  
  .circuit-dot:nth-child(8) {
    bottom: 15%;
    right: 30%;
    animation-delay: 2.5s;
  }
  
  @keyframes circuit-animation {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }
  
  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(2);
      opacity: 1;
    }
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
  }
  
  /* Header Section Styles */
  .installation-header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .installation-title {
    font-size: 3rem;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 20px;
    position: relative;
    display: inline-block;
  }
  
  .installation-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: #38d2d2;
    border-radius: 2px;
  }
  
  .installation-subtitle {
    font-size: 1.2rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  /* Progress Bar */
  .installation-progress {
    max-width: 800px;
    margin: 0 auto 60px;
    position: relative;
  }
  
  .progress-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 2;
  }
  
  .progress-line {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    height: 4px;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    z-index: 1;
  }
  
  .progress-line-active {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    height: 4px;
    width: 0%;
    background-color: #38d2d2;
    z-index: 1;
    transition: width 0.5s ease;
  }
  
  .progress-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
    cursor: pointer;
    width: 70px;
  }
  
  .step-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 10px;
    color: #ffffff;
    font-weight: bold;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }
  
  .step-circle.active {
    background-color: #38d2d2;
    color: #000000;
    box-shadow: 0 0 15px rgba(56, 210, 210, 0.5);
  }
  
  .step-circle.completed {
    background-color: rgba(56, 210, 210, 0.2);
    border-color: #38d2d2;
    color: #38d2d2;
  }
  
  .step-label {
    font-size: 0.8rem;
    font-weight: 500;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.3s ease;
  }
  
  .step-label.active {
    color: #ffffff;
  }
  
  /* Step Content Styles */
  .installation-steps {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }
  
  .step-content {
    display: none;
    background-color: rgba(0, 0, 0, 0.4);
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    margin-bottom: 60px;
    overflow: hidden;
    transition: all 0.5s ease;
    border: 1px solid rgba(56, 210, 210, 0.2);
  }
  
  .step-content.active {
    display: block;
    animation: fadeIn 0.5s ease-in-out;
  }
  
  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .step-content-inner {
    padding: 30px;
  }
  
  .step-content-header {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
    border-bottom: 1px solid rgba(56, 210, 210, 0.2);
    padding-bottom: 20px;
  }
  
  .step-number {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #38d2d2;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20px;
    box-shadow: 0 0 15px rgba(56, 210, 210, 0.5);
  }
  
  .step-number span {
    color: #000000;
    font-size: 1.5rem;
    font-weight: bold;
  }
  
  .step-title {
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
  }
  
  .step-content-body {
    margin-bottom: 30px;
  }
  
  .step-row {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 40px;
  }
  
  .step-image {
    flex: 1;
    border-radius: 10px;
    overflow: hidden;
    min-height: 300px;
    background-color: rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .step-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .step-info {
    flex: 1.2;
    display: flex;
    flex-direction: column;
  }
  
  .step-instructions {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    padding: 25px;
    height: 100%;
  }
  
  .step-instructions h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #38d2d2;
    margin-top: 0;
    margin-bottom: 15px;
  }
  
  .step-instructions p {
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 20px;
  }
  
  /* Checklist Styles */
  .checklist {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
  }
  
  .checklist li {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .checklist li i {
    color: #38d2d2;
    font-size: 1.2rem;
    margin-left: 10px;
  }
  
  /* Tips Box */
  .tips-box {
    background-color: rgba(56, 210, 210, 0.1);
    border-radius: 8px;
    padding: 15px;
    margin-top: 20px;
    border-right: 3px solid #38d2d2;
  }
  
  .tips-header {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .tips-header i {
    color: #38d2d2;
    font-size: 1.2rem;
    margin-left: 10px;
  }
  
  .tips-header h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #38d2d2;
    margin: 0;
  }
  
  .tips-box ul {
    padding-right: 20px;
    margin: 0;
  }
  
  .tips-box ul li {
    margin-bottom: 8px;
    color: rgba(255, 255, 255, 0.8);
  }
  
  /* Numbered List */
  .numbered-list {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
  }
  
  .numbered-list li {
    display: flex;
    margin-bottom: 20px;
  }
  
  .numbered-list .number {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: rgba(56, 210, 210, 0.2);
    color: #38d2d2;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    margin-left: 15px;
    flex-shrink: 0;
  }
  
  .numbered-list .text {
    flex: 1;
  }
  
  .numbered-list .text strong {
    display: block;
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 5px;
  }
  
  .numbered-list .text p {
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
  }
  
  /* Device Compatibility */
  .device-compatibility {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 8px;
    padding: 15px;
    margin-top: 20px;
  }
  
  .compatibility-header {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
  }
  
  .compatibility-header i {
    color: #38d2d2;
    font-size: 1.2rem;
    margin-left: 10px;
  }
  
  .compatibility-header h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
  }
  
  .device-types {
    display: flex;
    justify-content: space-around;
    text-align: center;
  }
  
  .device-type {
    padding: 10px;
  }
  
  .device-type i {
    font-size: 2rem;
    color: #38d2d2;
    margin-bottom: 10px;
  }
  
  .device-type p {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
  }
  
  /* Video Tutorial */
  .video-tutorial {
    margin-top: 20px;
  }
  
  .video-thumbnail {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .video-thumbnail:hover {
    transform: scale(1.03);
  }
  
  .video-thumbnail:hover .play-button {
    background-color: #38d2d2;
  }
  
  .video-thumbnail img {
    width: 100%;
    display: block;
  }
  
  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background-color: rgba(56, 210, 210, 0.8);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }
  
  .play-button i {
    color: #000000;
    font-size: 1.5rem;
  }
  
  .video-caption {
    text-align: center;
    margin-top: 10px;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  /* Device Tabs */
  .device-tabs {
    margin-top: 20px;
  }
  
  .tab-buttons {
    display: flex;
    border-bottom: 1px solid rgba(56, 210, 210, 0.3);
    margin-bottom: 20px;
  }
  
  .tab-button {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    padding: 10px 20px;
    font-size: 1rem;
    cursor: pointer;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .tab-button::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 0;
    height: 3px;
    background-color: #38d2d2;
    transition: width 0.3s ease;
  }
  
  .tab-button.active {
    color: #ffffff;
  }
  
  .tab-button.active::after {
    width: 100%;
  }
  
  .device-content {
    display: none;
  }
  
  .device-content.active {
    display: block;
    animation: fadeIn 0.3s ease-in-out;
  }
  
  /* Success Features */
  .success-features {
    margin-top: 20px;
  }
  
  .feature {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 15px;
    transition: transform 0.3s ease;
  }
  
  .feature:hover {
    transform: translateY(-5px);
    background-color: rgba(0, 0, 0, 0.3);
  }
  
  .feature-icon {
    width: 50px;
    height: 50px;
    background-color: rgba(56, 210, 210, 0.2);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 15px;
    flex-shrink: 0;
  }
  
  .feature-icon i {
    color: #38d2d2;
    font-size: 1.5rem;
  }
  
  .feature-text {
    flex: 1;
  }
  
  .feature-text h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
    margin-top: 0;
    margin-bottom: 5px;
  }
  
  .feature-text p {
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
  }
  
  /* Support Box */
  .support-box {
    background-color: rgba(56, 210, 210, 0.1);
    border-radius: 8px;
    padding: 20px;
    margin-top: 30px;
    text-align: center;
  }
  
  .support-box h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #38d2d2;
    margin-top: 0;
    margin-bottom: 10px;
  }
  
  .support-box p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 15px;
  }
  
  .support-options {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }
  
  .support-option {
    background-color: rgba(56, 210, 210, 0.15);
    color: #ffffff;
    text-decoration: none;
    padding: 10px 15px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
  }
  
  .support-option:hover {
    background-color: rgba(56, 210, 210, 0.3);
    transform: translateY(-3px);
  }
  
  .support-option i {
    margin-left: 8px;
    color: #38d2d2;
  }
  
  /* Navigation Buttons */
  .step-navigation {
    margin-top: 30px;
    border-top: 1px solid rgba(56, 210, 210, 0.2);
    padding-top: 20px;
  }
  
  .nav-buttons {
    display: flex;
    justify-content: space-between;
  }
  
  .nav-button {
    background-color: rgba(56, 210, 210, 0.1);
    border: 1px solid rgba(56, 210, 210, 0.3);
    color: #ffffff;
    font-size: 1rem;
    font-weight: 500;
    padding: 12px 20px;
    border-radius: 6px;
    cursor: pointer;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
  }
  
  .nav-button:hover {
    background-color: rgba(56, 210, 210, 0.2);
    transform: translateY(-2px);
  }
  
  .prev-button i {
    margin-left: 10px;
  }
  
  .next-button i {
    margin-right: 10px;
  }
  
  .restart-button i {
    margin-left: 10px;
  }
  
  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .step-row {
      flex-direction: column;
      gap: 20px;
    }
    
    .step-image {
      min-height: 200px;
    }
    
    .installation-title {
      font-size: 2.2rem;
    }
    
    .installation-subtitle {
      font-size: 1rem;
    }
    
    .progress-container {
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }
    
    .progress-line, .progress-line-active {
      display: none;
    }
    
    .step-circle {
      width: 35px;
      height: 35px;
    }
    
    .step-label {
      font-size: 0.7rem;
    }
    
    .device-types {
      flex-direction: column;
      gap: 15px;
    }
    
    .nav-buttons {
      flex-direction: column;
      gap: 10px;
    }
    
    .nav-button {
      width: 100%;
      justify-content: center;
    }
    
    .support-options {
      flex-direction: column;
    }
    
    .support-option {
      width: 100%;
      justify-content: center;
    }
  }
</style>

