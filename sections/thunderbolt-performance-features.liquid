            <h3 class="feature-title">{{ section.settings.feature2_title | default: 'טעינה 100W' }}</h3>
            <p class="feature-description">{{ section.settings.feature2_description | default: 'טען את ה-MacBook Pro שלך במהירות מקסימלית עם הספקת כוח מלאה' }}</p>
