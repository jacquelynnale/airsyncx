<!-- Thunderbolt 4 PRO USB-C Cable Sticky Mobile Buy Bar -->

<div class="thunderbolt-sticky-buy-bar">
  <div class="sticky-bar-container">
    <div class="product-info">
      <div class="product-image">
        <img src="{{ 'thunderbolt-cable-icon.png' | asset_url }}" alt="Thunderbolt 4 PRO Cable" class="product-thumbnail">
      </div>
      <div class="product-details">
        <h3 class="product-title">Thunderbolt 4 PRO</h3>
        <div class="product-price">
          <span class="current-price">$49.99</span>
          <span class="original-price">$69.99</span>
        </div>
      </div>
    </div>
    <div class="buy-button-container">
      <button class="buy-now-button">
        <span>Buy Now</span>
      </button>
    </div>
  </div>
</div>

<style>
  .thunderbolt-sticky-buy-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.98);
    box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
    z-index: 100;
    transform: translateY(100%);
    transition: transform 0.3s ease;
    display: none;
  }
  
  .thunderbolt-sticky-buy-bar.visible {
    transform: translateY(0);
  }
  
  .sticky-bar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px;
    max-width: 100%;
  }
  
  .product-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .product-image {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
  }
  
  .product-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  .product-details {
    display: flex;
    flex-direction: column;
  }
  
  .product-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: #1d1d1f;
    margin: 0 0 2px;
  }
  
  .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .current-price {
    font-size: 1rem;
    font-weight: 600;
    color: #1d1d1f;
  }
  
  .original-price {
    font-size: 0.9rem;
    color: #86868b;
    text-decoration: line-through;
  }
  
  .buy-button-container {
    flex-shrink: 0;
  }
  
  .buy-now-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: #0071e3;
    color: #ffffff;
    font-size: 0.9rem;
    font-weight: 600;
    padding: 10px 20px;
    border-radius: 20px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .buy-now-button:hover {
    background-color: #0058b0;
  }
  
  @media screen and (max-width: 767px) {
    .thunderbolt-sticky-buy-bar {
      display: block;
    }
  }
  
  @media screen and (max-width: 374px) {
    .sticky-bar-container {
      padding: 10px 15px;
    }
    
    .product-image {
      width: 35px;
      height: 35px;
    }
    
    .product-title {
      font-size: 0.8rem;
    }
    
    .current-price {
      font-size: 0.9rem;
    }
    
    .original-price {
      font-size: 0.8rem;
    }
    
    .buy-now-button {
      font-size: 0.8rem;
      padding: 8px 16px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stickyBar = document.querySelector('.thunderbolt-sticky-buy-bar');
    const buyButton = document.querySelector('.thunderbolt-sticky-buy-bar .buy-now-button');
    
    // Show sticky bar when scrolling down
    let lastScrollTop = 0;
    const scrollThreshold = 300; // Show after scrolling this many pixels
    
    window.addEventListener('scroll', function() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (scrollTop > scrollThreshold) {
        stickyBar.classList.add('visible');
      } else {
        stickyBar.classList.remove('visible');
      }
      
      lastScrollTop = scrollTop;
    });
    
    // Handle buy button click
    if (buyButton) {
      buyButton.addEventListener('click', function() {
        // Add to cart functionality
        // This would typically trigger the Shopify add to cart function
        // For now, we'll just scroll to the top where the main buy button is
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }
  });
</script>

