  }

  [dir="ltr"] .airsyncx-cart-title {
    text-align: left;
  }

  [dir="ltr"] .airsyncx-cart-title:after {
    right: auto;
    left: 0;
  }

  [dir="ltr"] .airsyncx-product-controls {
    text-align: right;
  }

  [dir="ltr"] .airsyncx-remove-link {
