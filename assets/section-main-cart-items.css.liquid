  .airsyncx-unit-price::-webkit-scrollbar {
    display: none;
  }
  
  .airsyncx-unit-price {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* Social Proof Container - Dynamic Sales Encouragement */
  .social-proof-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
    max-width: 350px;
    width: auto;
    opacity: 0;
    transform: translateX(100%);
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    pointer-events: none;
    direction: ltr;
  }

  [dir="rtl"] .social-proof-container {
    right: auto;
    left: 20px;
    transform: translateX(-100%);
  }

  .social-proof-container.show {
    opacity: 1;
    transform: translateX(0);
  }

  .social-proof-item {
    display: none;
    background: linear-gradient(135deg,
      rgba(30, 30, 30, 0.98) 0%,
      rgba(20, 20, 20, 0.98) 100%);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 16px 20px;
    margin-bottom: 8px;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(56, 210, 210, 0.1);
    border: 1px solid rgba(56, 210, 210, 0.3);
    position: relative;
    overflow: hidden;
    animation: slideInBounce 0.5s ease-out;
  }

  .social-proof-item.active {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  /* Shimmer effect for urgency */
  .social-proof-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(56, 210, 210, 0.1) 50%,
      transparent 100%);
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  @keyframes slideInBounce {
    0% {
      transform: translateX(100%);
      opacity: 0;
    }
    60% {
      transform: translateX(-10px);
      opacity: 1;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  [dir="rtl"] .social-proof-item {
    animation: slideInBounceRTL 0.5s ease-out;
  }

  @keyframes slideInBounceRTL {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    60% {
      transform: translateX(10px);
      opacity: 1;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .social-proof-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #38d2d2 0%, #2bbbbb 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .social-proof-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(0.8); opacity: 0.3; }
    50% { transform: scale(1.2); opacity: 0.1; }
  }

  .social-proof-icon i {
    font-size: 18px;
    color: #000000;
    font-weight: 600;
    z-index: 1;
  }

  .social-proof-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .social-proof-text {
    color: #ffffff;
    font-size: 14px;
    font-weight: 500;
    line-height: 1.4;
    margin: 0;
  }

  /* Different styling for each social proof type */
  .social-proof-item[data-type="recent-purchase"] .social-proof-icon {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }

  .social-proof-item[data-type="stock-warning"] .social-proof-icon {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    animation: urgentPulse 1.5s infinite;
  }

  @keyframes urgentPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .social-proof-item[data-type="customer-review"] .social-proof-icon {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }

  .social-proof-item[data-type="fast-shipping"] .social-proof-icon {
    background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  }

  .social-proof-item[data-type="trending"] .social-proof-icon {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  }

  .social-proof-item[data-type="special-offer"] .social-proof-icon {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
    animation: specialOfferPulse 1s infinite;
  }

  @keyframes specialOfferPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(249, 115, 22, 0.4);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 0 0 8px rgba(249, 115, 22, 0);
    }
  }

  /* Highlighting numbers and important text */
  .customer-count,
