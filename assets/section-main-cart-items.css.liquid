  /* Shopify Markets - Currency & Language Selectors */
  .airsyncx-localization-form {
    display: flex;
    gap: 15px;
    margin-bottom: 30px;
    justify-content: flex-end;
    align-items: center;
  }

  [dir="rtl"] .airsyncx-localization-form {
    justify-content: flex-start;
  }

  .airsyncx-currency-selector,
  .airsyncx-language-selector {
    position: relative;
  }

  .airsyncx-select-input {
    appearance: none;
    background: rgba(30, 30, 30, 0.6);
    border: 1px solid rgba(56, 210, 210, 0.3);
    color: #ffffff;
    padding: 8px 32px 8px 12px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 120px;
  }

  [dir="rtl"] .airsyncx-select-input {
    padding: 8px 12px 8px 32px;
  }

  .airsyncx-select-input:hover {
    background: rgba(30, 30, 30, 0.8);
    border-color: #38d2d2;
  }

  .airsyncx-select-input:focus {
    outline: 2px solid #38d2d2;
    outline-offset: 2px;
  }

  /* Custom dropdown arrow */
  .airsyncx-currency-selector::after,
  .airsyncx-language-selector::after {
    content: '▼';
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #38d2d2;
    font-size: 12px;
    pointer-events: none;
  }

  [dir="rtl"] .airsyncx-currency-selector::after,
  [dir="rtl"] .airsyncx-language-selector::after {
    right: auto;
    left: 12px;
  }

  /* Loading state when changing localization */
  body.localization-loading {
    position: relative;
    pointer-events: none;
  }

  body.localization-loading::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 9998;
  }

  body.localization-loading::after {
    content: '';
    position: fixed;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 3px solid rgba(56, 210, 210, 0.3);
    border-top-color: #38d2d2;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    z-index: 9999;
  }

  /* RTL/LTR specific adjustments */
  [dir="ltr"] .airsyncx-cart-wrapper {
