  /* Cart table layout with RTL support */
  .cart-items {
    width: 100%;
    border-collapse: collapse;
    direction: rtl; /* RTL support */
    table-layout: fixed;
  }
  
  .cart-items th {
    padding: 1.2rem 0;
    font-weight: 600;
    border-bottom: 1px solid rgba(var(--color-base-text), 0.1);
  }
  
  .cart-items th.product-header {
    text-align: right;
    width: 60%;
  }
  
  .cart-items th.quantity-header {
    text-align: center;
    width: 15%;
  }
  
  .cart-items th.total-header {
    text-align: center;
    width: 20%;
  }
  
  .cart-items th.delete-header {
    width: 5%;
  }
  
  .cart-item {
    border-bottom: 1px solid rgba(var(--color-base-text), 0.1);
  }
  
  /* Product column */
  .cart-item__media {
    width: 110px;
    padding-right: 2rem;
    vertical-align: top;
  }
  
  .cart-item__details {
    padding: 1.5rem 0.5rem 1.5rem 0;
    text-align: right;
    vertical-align: top;
  }
  
  .cart-item__name {
    margin-bottom: 0.5rem;
    text-align: right;
  }
  
  .product-option {
    margin-top: 0.4rem;
    margin-bottom: 0.4rem;
    display: block;
    text-align: right;
  }
  
  .product-option dt,
  .product-option dd {
    display: inline-block;
    margin: 0;
    text-align: right;
  }
  
  /* Quantity column */
  .cart-item__quantity {
    text-align: center;
    width: 15%;
    vertical-align: middle;
  }
  
  .cart-item__quantity-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Total column */
  .cart-item__totals {
    text-align: center;
    width: 20%;
    vertical-align: middle;
  }
  
  .cart-item__price-wrapper {
    text-align: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* Delete column */
  .cart-item__delete {
    width: 5%;
    text-align: center;
    vertical-align: middle;
  }
  
  cart-remove-button {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  cart-remove-button a.button {
    padding: 0.5rem;
  }
  
  /* Mobile responsiveness */
  @media screen and (max-width: 749px) {
    .cart-items {
      display: block;
      direction: rtl;
    }
    
    .cart-items thead {
      display: none;
    }
    
    .cart-items tbody, .cart-items tr, .cart-items td {
      display: block;
      width: 100%;
    }
    
    .cart-item {
      display: grid;
      grid-template-columns: 1fr;
      padding: 1.5rem 0;
    }
    
    .cart-item__media {
      width: 100%;
      padding-right: 0;
      margin-bottom: 1rem;
      text-align: center;
    }
    
    .cart-item__image-container {
      margin: 0 auto;
    }
    
    .cart-item__details {
      padding: 0;
      margin-bottom: 1rem;
    }
    
    .cart-item__quantity {
      width: 100%;
      padding: 0;
      margin-bottom: 1rem;
    }
    
    .cart-item__quantity-wrapper {
      justify-content: center;
    }
    
    .cart-item__totals {
      width: 100%;
      padding: 0;
      text-align: center;
      margin-bottom: 1rem;
    }
    
    .cart-item__price-wrapper {
      text-align: center;
      align-items: center;
    }
    
    .cart-item__delete {
      width: 100%;
      text-align: center;
      margin-top: 0.5rem;
    }
    
    cart-remove-button {
      justify-content: center;
    }
  }

